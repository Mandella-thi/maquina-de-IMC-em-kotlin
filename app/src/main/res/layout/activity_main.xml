<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/linearLayout">

    <TextView
        android:id="@+id/titleTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m_quina_de_imc"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="64dp"
        tools:layout_editor_absoluteY="183dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_conversion_absoluteWidth="349dp" />

    <EditText
        android:id="@+id/pesoEDT"
        android:layout_width="wrap_content"
        android:hint="peso(ex: 65 kg)"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="100dp"
        tools:layout_editor_absoluteY="248dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_conversion_absoluteWidth="129dp" />

    <EditText
        android:id="@+id/alturaEDT"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:hint="altura (ex: 1.70m)"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="100dp"
        tools:layout_editor_absoluteY="348dp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_conversion_absoluteWidth="147dp" />

    <Button
        android:id="@+id/calcularBTN"
        android:layout_width="wrap_content"
        android:text="Calcular"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="100dp"
        tools:layout_editor_absoluteY="448dp"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_conversion_absoluteWidth="147dp" />


</LinearLayout>